<!DOCTYPE html>
<html lang="en">
<head>
    <title>My Swap</title>
    <% include ../template/head.ejs %>
</head>
<body>
    <div class="container-fluid fill">
        <% include ../template/header.ejs %>
        <% include ../template/user-navigation.ejs %>
        <div class="main-wrap">
            <div class="row main">
                <% include ../template/site-navigation.ejs %>
                <div class="col-sm-10 main-content">
                    <div id="flow">Home / MyCars</div>
                    <div id="content">
                        <h3><b><%= userFirstName %>'s Cars for swap</b></h3>
                        <% if(userItems.length > 0){ %>
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                    <th>Car</th>
                                    <th>Swap Offer</th>
                                    <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(i=0;i< userItems.length;i++){ %>
                                        <tr>
                                            <td>
                                                <a href="<%= "./item?itemCode=" + userItems[i].item.ItemCode  %>">
                                                    <%= userItems[i].item.ItemName %>
                                                </a>
                                            </td>
                                            <td>
                                                <a href="<%= "./item?itemCode=" + userItems[i].swapItem.ItemCode  %>">
                                                    <%= userItems[i].swapItem.ItemName %>
                                                </a>
                                            </td>
                                            <td>
                                                <div class="row">
                                                    <% if(userItems[i].pendingStatus == '0'){ %>
                                                        <div class="col-sm-3">
                                                            <a href="./myItems?action=accept&theItem=<%= userItems[i].item.ItemCode %>">
                                                                <div class="btn btn-primary">
                                                                    Accept
                                                                </div>
                                                            </a>
                                                        </div>
                                                        <div class="col-sm-3">
                                                            <a href="./myItems?action=reject&theItem=<%= userItems[i].item.ItemCode %>">
                                                                <div class="btn btn-primary">
                                                                    Reject
                                                                </div>
                                                            </a>
                                                        </div>
                                                    <% } else if(userItems[i].pendingStatus == '1') { %>
                                                        <div class="col-sm-3">
                                                            <a href="./myItems?action=withdraw&theItem=<%=userItems[i].item.ItemCode %>">
                                                                <div class="btn btn-primary">
                                                                    Withdraw Swap
                                                                </div>
                                                            </a>
                                                        </div>
                                                    <% } %>
                                            </td>
                                        </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        <% } else { %>
                            <div>
                                No items available to display
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div> 
        <% include ../template/footer.ejs %>
    </div>
</body>

</html>
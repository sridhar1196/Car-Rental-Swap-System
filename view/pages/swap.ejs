<!DOCTYPE html>
<html lang="en">
<head>
    <title>Swap</title>
    <% include ../template/head.ejs %>
</head>
<body>
    <div class="container-fluid fill">
        <% include ../template/header.ejs %>
        <% include ../template/user-navigation.ejs %>
        <div class="main-wrap">
            <div class="row main">
                <% include ../template/site-navigation.ejs %>
                <div class="col-sm-10 main-content">
                    <div id="flow">Home / Categories / Items</div>
                    <div id="content">
                        <div class="row">
                            <div class="col-sm-3">
                                <img src="<%= item.ImageURL %>" class="items_image" alt="Toyato Corolla">
                            </div>
                            <div class="col-sm-7">
                                <h3><b><%= item.ItemName %> - <%= item.CatalogCategory %></b></h3>
                                <p><%= item.Description %></p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <h4><b>Select an Item from your available swap </b></h4>
                    </div>
                    <form action='./myItems' method="GET">
                        <div class="row">
                            <% for(i=0;i < availableItem.length;i++){ %>
                                <% if((1%3) == 0){ %>
                                    </div>
                                    <div class="row">
                                <% } %>
                                <div class="cate-items col-sm-3">
                                    <div class="radio">
                                        <label>
                                                <input type="radio" value="<%= availableItem[i].item.ItemCode %>" name="theItem" <% if(i==0){ %> checked <% } %>>
                                                <b><%= availableItem[i].item.ItemName %></b>
                                        </label>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                        <div>
                            <input type="hidden" name="action" value="offer">
                            <input type="hidden" name="swapItem" value="<%= item.ItemCode %>">
                        </div>
                        <div class="row">
                            <div class="data-content">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-exchange" aria-hidden="true"></i>  Confirm swap
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div> 
        <% include ../template/footer.ejs %>
    </div>
</body>

</html>